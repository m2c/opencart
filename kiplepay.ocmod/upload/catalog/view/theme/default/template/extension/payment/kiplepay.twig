<form action="{{ action }}" method="post" id="payment">
  <input type="hidden" name="ord_mercID" value="{{ merchant }}" />
  <input type="hidden" name="ord_mercref" value="{{ order_id }}" />
  <input type="hidden" name="ord_totalamt" value="{{ amount }}" />
  <input type="hidden" name="ord_gstamt" value="0.00" />
  <input type="hidden" name="currency" value="{{ currency }}" />
  <input type="hidden" name="desc" value="{{ description }}" />
  <input type="hidden" name="ord_shipname" value="{{ name }}" />
  <input type="hidden" name="address" value="{{ address }}" />
  <input type="hidden" name="postcode" value="{{ postcode }}" />
  <input type="hidden" name="ord_shipcountry" value="{{ country }}" />
  <input type="hidden" name="ord_telephone" value="{{ telephone }}" />
  <input type="hidden" name="ord_date" value="{{ ord_date }}" />
  <input type="hidden" name="ord_email" value="{{ email }}" />
  <input type="hidden" name="merchant_hashvalue" value="{{ hashvalue }}" />
  <input type="hidden" name="version" value="{{version}}" />
  <input type="hidden" name="ord_customfield4" value="{{ord_customfield4}}" />
  <input type="hidden" name="ord_recurring_enable" value="{{ord_recurring_enable}}" />
  <input type="hidden" name="ord_recurring_frequency" value="{{ord_recurring_frequency}}" />
  <input type="hidden" name="ord_recurring_start_date" value="{{ord_recurring_start_date}}" />
  <input type="hidden" name="ord_recurring_recurrence" value="{{ord_recurring_recurrence}}" />
  <input type="hidden" name="ord_recurring_charging_date" value="{{ord_recurring_charging_date}}" />
  <input type="hidden" name="payment_code" value="{{payment_code}}" />
  <input type="hidden" name="dynamic_callback_url" value="{{dynamic_callback_url}}" />
  <input type="hidden" name="ord_setOrderStatus" value="{{ setOrderStatus }}" />

  <input type="hidden" name="ord_returnURL" value="{{ return_url }}" />
  <div class="buttons">
    <div class="right">
      <input type="submit" value="{{ button_confirm }}" class="btn btn-primary" />
    </div>
  </div>
</form>
